{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.tsx",
    "server/**/*.ts",
    "server/**/*.tsx",
    "imports/**/*.ts",
    "imports/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".meteor"
  ]
}
